<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Requirements Manager</display-name>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>ReqManagerSec</realm-name>
        <form-login-config>
            <form-login-page>/html/signin/redirSignin.html</form-login-page>
            <form-error-page>/html/signin/redirSignin.html</form-error-page>
        </form-login-config>
    </login-config>

</web-app>